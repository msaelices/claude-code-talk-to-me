{
  "name": "talktome",
  "version": "3.0.0",
  "description": "Claude communicates with you through your computer's microphone and speakers for real-time voice conversations",
  "author": {
    "name": "TalkToMe Contributors",
    "url": "https://github.com/msaelices/claude-code-talk-to-me"
  },
  "repository": "https://github.com/msaelices/claude-code-talk-to-me",
  "license": "MIT",
  "keywords": ["voice", "audio", "microphone", "speech", "tts", "stt", "elevenlabs"],
  "skills": "./skills",
  "mcpServers": {
    "talktome": {
      "command": "bash",
      "args": ["-c", "cd ${CLAUDE_PLUGIN_ROOT} && pip install -e server/. --quiet 2>/dev/null; cd server && python3 -m talktome_mcp.server"],
      "env": {
        "TALKTOME_ELEVENLABS_API_KEY": "${TALKTOME_ELEVENLABS_API_KEY}",
        "TALKTOME_TTS_PROVIDER": "${TALKTOME_TTS_PROVIDER:-elevenlabs}",
        "TALKTOME_STT_PROVIDER": "${TALKTOME_STT_PROVIDER:-elevenlabs}",
        "TALKTOME_ELEVENLABS_VOICE_ID": "${TALKTOME_ELEVENLABS_VOICE_ID:-21m00Tcm4TlvDq8ikWAM}",
        "TALKTOME_ELEVENLABS_MODEL_ID": "${TALKTOME_ELEVENLABS_MODEL_ID:-eleven_multilingual_v2}",
        "TALKTOME_ELEVENLABS_STT_MODEL": "${TALKTOME_ELEVENLABS_STT_MODEL:-scribe_v2_realtime}",
        "TALKTOME_ELEVENLABS_LANGUAGE": "${TALKTOME_ELEVENLABS_LANGUAGE:-en}",
        "TALKTOME_STT_SILENCE_DURATION_MS": "${TALKTOME_STT_SILENCE_DURATION_MS:-800}"
      }
    }
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Evaluate if Claude should speak to the user to report progress or ask for what to do next. If yes, use the initiate_call tool."
          }
        ]
      }
    ]
  }
}
